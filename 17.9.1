def sort_1(numbs):
    numbs.sort()
    return numbs

def binary_search(array, number, left, right):
    if left > right:
        return False

    middle = (right + left) // 2
    if array[middle] == number:
        return middle
    elif number < array[middle]:
        return binary_search(array, number, left, middle - 1)
    else:
        return binary_search(array, number, middle + 1, right)


